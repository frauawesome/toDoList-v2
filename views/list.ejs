<%- include("header") -%>

<!-- navbar (bootstrap) -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">GetItDone</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Today <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="/" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          All Lists
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <% allLists.forEach(function(list){ %> 
            <a class="dropdown-item" href="<%= list.name %>"><%=  list.name  %></a>
          <% }); %> 
        </div>
      </li>
    </ul>
  </div>
</nav>

<!-- title of to-do list -->
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

<!-- items in to-do list -->
  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form action="/delete" method="post">
      
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
    <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

  <!-- title for new list -->
  <div class="box" id="heading">
    <h1>Create a New List</h1>
  </div>
  <!-- submit button for new list -->
  <div class="box">
    <form class="item" action="/customListName" method="post">
      <input type="text" name="newList" placeholder="Name of List" autocomplete="off">
      <button type="submit">+</button>
    </form>
  </div>

  


<%- include("footer") -%>
